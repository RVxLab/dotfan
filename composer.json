{
    "name": "rvxlab/dotfan",
    "description": "A dotfile manager",
    "license": "Apache-2.0",
    "type": "project",
    "keywords": [
        "laravel",
        "laravel zero",
        "console",
        "cli",
        "dotfiles",
        "unix",
        "macos"
    ],
    "authors": [
        {
            "name": "RVxLab",
            "email": "code@rvx.works"
        }
    ],
    "require": {
        "php": "^8.4",
        "laravel-zero/framework": "^12.0",
        "symfony/finder": "^7.3"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.48",
        "friendsofphp/php-cs-fixer": "^3.88",
        "larastan/larastan": "^3.7",
        "mockery/mockery": "^1.6.12",
        "pestphp/pest": "^v3.8.4",
        "phpacker/phpacker": "^0.6.3",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-strict-rules": "^2.0",
        "rector/rector": "^2.1",
        "spatie/temporary-directory": "^2.3"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "bin": [
        "dotfan"
    ],
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        },
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "scripts": {
        "analyze": "vendor/bin/phpstan analyze --memory-limit=-1",
        "build:all": [
            "@build:clean",
            "@build:phar",
            "@build:static"
        ],
        "build:clean": "rm -rf ./builds",
        "build:phar": "php dotfan app:build dotfan.phar",
        "build:static": "vendor/bin/phpacker build",
        "codestyle": [
            "@rector",
            "@lint"
        ],
        "lint": "vendor/bin/php-cs-fixer fix",
        "rector": "vendor/bin/rector process"
    }
}
